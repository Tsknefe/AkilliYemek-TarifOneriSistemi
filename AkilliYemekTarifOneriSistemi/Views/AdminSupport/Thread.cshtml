@model List<AkilliYemekTarifOneriSistemi.Models.SupportMessage>

@{
    ViewData["Title"] = "Destek - Konuþma";
    var userId = (string)ViewBag.UserId;
    var email = (string)ViewBag.UserEmail;
    var lastUtc = Model.LastOrDefault()?.CreatedAt.ToString("o") ?? "";
}

<div class="container mt-4" style="max-width:1000px;">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <div>
            <h4 class="mb-0">Konuþma</h4>
            <div style="font-size:13px; opacity:.8;">
                <strong>@email</strong> • <span>UserId: @userId</span>
            </div>
        </div>
        <a class="btn btn-outline-secondary" asp-action="Index">‹ Listeye Dön</a>
    </div>

    <div id="chatBox" class="border rounded p-3 mb-3" style="height:520px; overflow:auto; background:#fff;">
        @foreach (var m in Model)
        {
            var isAdmin = m.SenderRole == "Admin";
            <div class="d-flex mb-2 @(isAdmin ? "justify-content-end" : "justify-content-start")">
                <div class="p-2 rounded" style="max-width:70%; @(isAdmin ? "background:#eaf7ea;" : "background:#f3f3f3;")">
                    <div style="font-size:12px; opacity:.7;">
                        @(isAdmin ? "Admin" : "User") • @m.CreatedAt.ToLocalTime().ToString("HH:mm")
                    </div>
                    <div>@m.Message</div>
                </div>
            </div>
        }
    </div>

    <form asp-action="Send" method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" name="userId" value="@userId" />
        <input name="message" class="form-control" placeholder="Yanýt yaz..." autocomplete="off" />
        <button class="btn btn-success" type="submit">Gönder</button>
    </form>
</div>

<script>
    const chatBox = document.getElementById("chatBox");
    chatBox.scrollTop = chatBox.scrollHeight;

    let lastUtc = "@lastUtc";
    const userId = "@userId";

    async function poll() {
        try {
            const url = lastUtc
                ? `/AdminSupport/Poll?userId=${encodeURIComponent(userId)}&afterUtc=${encodeURIComponent(lastUtc)}`
                : `/AdminSupport/Poll?userId=${encodeURIComponent(userId)}`;

            const res = await fetch(url);
            const data = await res.json();

            if (data && data.length) {
                data.forEach(m => {
                    const isAdmin = m.senderRole === "Admin";
                    const wrapper = document.createElement("div");
                    wrapper.className = `d-flex mb-2 ${isAdmin ? "justify-content-end" : "justify-content-start"}`;

                    const bubble = document.createElement("div");
                    bubble.className = "p-2 rounded";
                    bubble.style.maxWidth = "70%";
                    bubble.style.background = isAdmin ? "#eaf7ea" : "#f3f3f3";

                    const meta = document.createElement("div");
                    meta.style.fontSize = "12px";
                    meta.style.opacity = ".7";
                    meta.textContent = (isAdmin ? "Admin" : "User") + " • " + new Date(m.createdAtUtc).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});

                    const msg = document.createElement("div");
                    msg.textContent = m.message;

                    bubble.appendChild(meta);
                    bubble.appendChild(msg);
                    wrapper.appendChild(bubble);
                    chatBox.appendChild(wrapper);

                    lastUtc = m.createdAtUtc;
                });

                chatBox.scrollTop = chatBox.scrollHeight;
            }
        } catch (e) { }
        setTimeout(poll, 3000);
    }

    poll();
</script>
