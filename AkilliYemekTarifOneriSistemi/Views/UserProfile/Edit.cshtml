@model AkilliYemekTarifOneriSistemi.Models.ViewModels.UserProfileEditViewModel
@{
    ViewData["Title"] = "Profili Düzenle";
}

<div class="container mt-4">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between">
                <h4 class="mb-0"> Profili Düzenle</h4>
                <a asp-action="Index" class="btn btn-light btn-sm">‹ Profilime Dön</a>
            </div>

            <div class="card-body">
                <form asp-controller="UserProfile" asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label>Yaþ</label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label>Boy (cm)</label>
                            <input asp-for="HeightCm" class="form-control" />
                            <span asp-validation-for="HeightCm" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label>Kilo (kg)</label>
                            <input asp-for="WeightKg" class="form-control" />
                            <span asp-validation-for="WeightKg" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Cinsiyet</label>
                        <select asp-for="Gender" class="form-select">
                            <option value="Male">Erkek</option>
                            <option value="Female">Kadýn</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label>Aktivite Seviyesi</label>
                        <select asp-for="ActivityLevel" class="form-select">
                            <option value="sedentary">Hareketsiz</option>
                            <option value="light">Az Hareketli</option>
                            <option value="moderate">Orta</option>
                            <option value="active">Aktif</option>
                            <option value="athlete">Sporcu</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label>Hedef</label>
                        <select asp-for="Goal" class="form-select">
                            <option value="Lose">Kilo Ver</option>
                            <option value="Maintain">Koru</option>
                            <option value="Gain">Kilo Al</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label>Diyet Türü</label>
                        <select asp-for="DietType" class="form-select">
                            <option value="Normal">Normal</option>
                            <option value="Vegan">Vegan</option>
                            <option value="Vegetarian">Vejetaryen</option>
                            <option value="GlutenFree">Glutensiz</option>
                            <option value="Keto">Keto</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        ?? Kaydet
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
