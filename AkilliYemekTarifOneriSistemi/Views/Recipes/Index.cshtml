@model IEnumerable<AkilliYemekTarifOneriSistemi.Models.Recipe>

@{
    ViewData["Title"] = "Tarifler";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">üçΩÔ∏è Tarifler</h1>
            <p class="lead">T√ºm yemek tariflerini ke≈üfedin</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Hen√ºz tarif yok!</h4>
            <p>Hen√ºz sistemde kayƒ±tlƒ± tarif bulunmamaktadƒ±r. ƒ∞lk tarifi eklemek i√ßin admin paneline giri≈ü yapƒ±n.</p>
        </div>
    }
    else
    {
        <!-- Tarif kartlarƒ± grid g√∂r√ºn√ºm√º -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var recipe in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <!-- Tarif g√∂rseli -->
                        @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                        {
                            <img src="@recipe.ImageUrl" class="card-img-top" alt="@recipe.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <!-- G√∂rsel yoksa placeholder -->
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image" style="font-size: 3rem; color: #ccc;"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <!-- Kategori badge -->
                            @if (recipe.Category != null)
                            {
                                <span class="badge bg-primary mb-2">@recipe.Category.Name</span>
                            }

                            <!-- Tarif ba≈ülƒ±ƒüƒ± -->
                            <h5 class="card-title">@recipe.Title</h5>

                            <!-- Kƒ±sa a√ßƒ±klama -->
                            @if (!string.IsNullOrEmpty(recipe.ShortDescription))
                            {
                                <p class="card-text text-muted">@recipe.ShortDescription</p>
                            }

                            <!-- Tarif bilgileri (s√ºre, zorluk) -->
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    @if (recipe.PreparationTimeMinutes.HasValue)
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> @recipe.PreparationTimeMinutes dk
                                        </small>
                                    }
                                    @if (!string.IsNullOrEmpty(recipe.Difficulty))
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-star"></i> @recipe.Difficulty
                                        </small>
                                    }
                                </div>

                                <!-- Etiketler -->
                                @if (recipe.RecipeTags != null && recipe.RecipeTags.Any())
                                {
                                    <div class="mb-2">
                                        @foreach (var recipeTag in recipe.RecipeTags.Take(3))
                                        {
                                            <span class="badge bg-secondary me-1">@recipeTag.Tag.Name</span>
                                        }
                                        @if (recipe.RecipeTags.Count > 3)
                                        {
                                            <span class="badge bg-secondary">+@(recipe.RecipeTags.Count - 3)</span>
                                        }
                                    </div>
                                }

                                <!-- Detay butonu -->
                                <a href="@Url.Action("Details", "Recipes", new { id = recipe.Id })" class="btn btn-primary w-100">
                                    <i class="bi bi-eye"></i> Detaylarƒ± G√∂r
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Bootstrap Icons i√ßin CDN (eƒüer yoksa) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

