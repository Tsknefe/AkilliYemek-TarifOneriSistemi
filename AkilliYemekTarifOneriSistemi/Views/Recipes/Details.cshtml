@model AkilliYemekTarifOneriSistemi.Models.Recipe

@{
    ViewData["Title"] = "Tarif Detayı";
    bool isAdmin = User.IsInRole("Admin");
}

<!-- ⭐ Büyük Görsel Alanı ⭐ -->
<div class="detail-image-wrapper mb-4">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" class="detail-image" />
    }
    else
    {
        <img src="~/images/no-image.png" class="detail-image" />
    }
</div>

<div class="card p-4 shadow-sm">

    <h2 class="mb-3">@Model.Name</h2>

    <p><strong>Açıklama:</strong> @Model.Description</p>

    <p>
        ⏱️ <strong>@Model.CookingTime dk</strong> &nbsp; | &nbsp;
        🍽️ <strong>@Model.Servings kişilik</strong> &nbsp; | &nbsp;
        🥗 <strong>@Model.DietType</strong>
    </p>

    <a href="/Recipes" class="btn btn-secondary">← Geri</a>

    @if (isAdmin)
    {
        <a href="/Recipes/Edit/@Model.Id" class="btn btn-warning">Düzenle</a>
        <a href="/Recipes/Delete/@Model.Id" class="btn btn-danger">Sil</a>
    }
</div>


<!-- MALZEMELER -->
<h3 class="mt-5">🍅 Malzemeler</h3>

@if (isAdmin)
{
    <a class="btn btn-primary btn-sm mb-3" href="/RecipeIngredients/Add/@Model.Id">
        ➕ Malzeme Ekle
    </a>
}

@if (Model.RecipeIngredients == null || !Model.RecipeIngredients.Any())
{
    <p class="text-muted">Bu tarif için henüz malzeme eklenmemiş.</p>
}
else
{
    <table class="table table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Malzeme</th>
                <th>Miktar</th>
                <th>Birim</th>
                @if (isAdmin)
                {
                    <th style="width: 170px;">İşlemler</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RecipeIngredients)
            {
                <tr>
                    <td>@item.Ingredient.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Unit</td>

                    @if (isAdmin)
                    {
                        <td>
                            <a href="/RecipeIngredients/Edit/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                            <a href="/RecipeIngredients/Delete/@item.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Bu malzemeyi silmek istediğine emin misin?');">
                                Sil
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}


<!-- BESİN DEĞERLERİ -->
<h3 class="mt-5">🍏 Besin Değerleri</h3>

@if (Model.NutritionFacts == null)
{
    <p class="text-muted">Besin bilgisi henüz hesaplanmadı.</p>
}
else
{
    <table class="table table-bordered shadow-sm w-50">
        <thead class="table-light">
            <tr>
                <th>Bileşen</th>
                <th>Değer</th>
            </tr>
        </thead>
        <tbody>
            <tr><td>Kalori</td><td>@Model.NutritionFacts.Calories kcal</td></tr>
            <tr><td>Protein</td><td>@Model.NutritionFacts.Protein g</td></tr>
            <tr><td>Yağ</td><td>@Model.NutritionFacts.Fat g</td></tr>
            <tr><td>Karbonhidrat</td><td>@Model.NutritionFacts.Carbs g</td></tr>
            <tr><td>Lif</td><td>@Model.NutritionFacts.Fiber g</td></tr>
            <tr><td>Şeker</td><td>@Model.NutritionFacts.Sugar g</td></tr>
            <tr><td>Sodyum</td><td>@Model.NutritionFacts.Sodium mg</td></tr>
        </tbody>
    </table>
}


<!-- ⭐ DETAY GÖRSELİ CSS ⭐ -->
<style>
    .detail-image {
        width: 100%;
        height: 380px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 4px 18px rgba(0,0,0,0.4);
    }

    .detail-image-wrapper {
        width: 100%;
        overflow: hidden;
        border-radius: 12px;
    }
</style>
