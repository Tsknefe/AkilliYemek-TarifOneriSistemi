<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Porsiyon</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

<header>
        <nav class="navbar navbar-expand-lg navbar-light custom-navbar">

        <div class="container">

            <!-- LOGO -->
            <a class="navbar-brand d-flex align-items-center gap-2"
               asp-controller="Home" asp-action="Index">
                    <img src="~/images/1logo.png"
                         class="navbar-logo"
                         alt="Porsiyon Logo" />

            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Home"
                           asp-action="Index">Ana Sayfa</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Recipes"
                           asp-action="Index">Tarifler</a>
                    </li>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Recipes"
                               asp-action="Favorites">Favoriler</a>
                        </li>
                    }
                </ul>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

<main class="container py-4">
    @RenderBody()
</main>

<footer class="text-center text-muted py-4 small">
    © 2025 PORSİYON • Akıllı Yemek Tarif Sistemi
</footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
