<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Porsiyon</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .custom-navbar {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #333;
            padding: 8px 14px;
            border-radius: 999px;
            transition: all .2s ease;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(111, 29, 27, 0.08);
                color: #6f1d1b;
            }

        .dropdown-menu {
            border: none;
            border-radius: 16px;
            box-shadow: 0 20px 40px rgba(0,0,0,.12);
            padding: 8px;
            margin-top: 10px;
        }

        .dropdown-item {
            border-radius: 12px;
            padding: 10px 14px;
            font-weight: 500;
            transition: background .2s ease;
        }

            .dropdown-item:hover {
                background-color: rgba(111, 29, 27, 0.08);
                color: #6f1d1b;
            }

        .navbar .btn {
            border-radius: 999px;
            padding: 6px 16px;
        }

        footer {
            border-top: 1px solid rgba(0,0,0,0.05);
        }
    </style>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg custom-navbar fixed-top">
            <div class="container">

                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/images/1logo.png"
                         class="navbar-logo"
                         alt="Porsiyon Logo" />
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Index">
                                Ana Sayfa
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Recipes"
                               asp-action="Index">
                                Tarifler
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Recipes"
                                   asp-action="Favorites">
                                    Favoriler
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown">
                                    Profilim
                                </a>

                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="UserProfile"
                                           asp-action="Index">
                                            Profil Bilgilerim
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="UserAllergies"
                                           asp-action="Index">
                                            Alerjilerim
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="WeeklyPlans"
                                           asp-action="Index">
                                            Haftalýk Planlarým
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2">

                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <a asp-controller="AdminRecipes"
                               asp-action="Index"
                               class="btn btn-outline-danger rounded-pill fw-semibold">
                                Admin
                            </a>
                        }

                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div style="height: 80px;"></div>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-4 small">
        © 2025 PORSÝYON • Akýllý Yemek Tarif Sistemi
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
