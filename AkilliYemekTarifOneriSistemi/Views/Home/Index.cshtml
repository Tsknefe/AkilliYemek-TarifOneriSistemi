@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- ================= HERO ================= -->
<section class="py-5 bg-light rounded-4 shadow-sm mb-5">
    <div class="container">
        <div class="row align-items-center g-5">

            <!-- SOL -->
            <div class="col-lg-6">

                <!-- LOGO -->
                <img src="~/images/1logo.png"
                     alt="Porsiyon Logo"
                     height="180"
                     class="mb-4" />

                <h1 class="fw-bold display-6">
                    Akıllı Yemek<br />
                    Tarif Öneri Sistemi
                </h1>

                <p class="lead text-muted mt-3">
                    Elindeki malzemelere göre <strong>akıllı tarif önerileri</strong>,
                    detaylı besin değerleri ve favori listeleriyle
                    yemek yapmayı kolaylaştır.
                </p>

                <div class="mt-4 d-flex gap-3 flex-wrap">
                    <a asp-controller="Recipes"
                       asp-action="Index"
                       class="btn btn-primary btn-lg rounded-pill px-5">
                        Tarifleri Keşfet →
                    </a>

                    @if (!User.Identity?.IsAuthenticated ?? true)
                    {
                        <a asp-area="Identity"
                           asp-page="/Account/Register"
                           class="btn btn-outline-dark btn-lg rounded-pill px-5">
                            Üye Ol
                        </a>
                    }
                </div>
            </div>

            <!-- SAĞ -->
            <div class="col-lg-6 text-center">
                <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836"
                     class="img-fluid rounded-4 shadow"
                     alt="Food Image" />
            </div>

        </div>
    </div>
</section>

<!-- ================= FEATURES ================= -->
<section class="py-5 mb-5">
    <div class="container">

        <h2 class="text-center fw-bold mb-5">
            🚀 Porsiyon Ne Sunar?
        </h2>

        <div class="row g-4 text-center">

            <div class="col-md-4">
                <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                    <div class="fs-1 mb-3">🥕</div>
                    <h5 class="fw-bold">Malzemeye Göre Tarif</h5>
                    <p class="text-muted">
                        Elindeki malzemeleri seç,
                        sana en uygun tarifleri saniyeler içinde keşfet.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                    <div class="fs-1 mb-3">🔥</div>
                    <h5 class="fw-bold">Besin & Kalori Bilgisi</h5>
                    <p class="text-muted">
                        Tariflerin kalori, protein ve besin değerlerini
                        detaylı şekilde görüntüle.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                    <div class="fs-1 mb-3">❤️</div>
                    <h5 class="fw-bold">Favoriler & Planlama</h5>
                    <p class="text-muted">
                        Sevdiğin tarifleri kaydet,
                        haftalık yemek planlarını kolayca oluştur.
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ================= CTA ================= -->
<section class="py-5 bg-dark text-white rounded-4">
    <div class="container text-center">

        <h2 class="fw-bold mb-3">
            Bugün Ne Pişirsem?
        </h2>

        <p class="text-muted mb-4">
            Porsiyon ile karar vermek artık çok daha kolay.
        </p>

        <a asp-controller="Recipes"
           asp-action="Index"
           class="btn btn-light btn-lg rounded-pill px-5">
            Tariflere Git 🍳
        </a>

    </div>
</section>
