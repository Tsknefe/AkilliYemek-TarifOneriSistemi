@model AkilliYemekTarifOneriSistemi.Models.Recipe

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2> Tarif Düzenle</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />

    <div class="mb-3">
        <label class="form-label">Baþlýk</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Açýklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Piþirme Süresi (dk)</label>
            <input asp-for="CookingTime" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Hazýrlýk Süresi (dk)</label>
            <input asp-for="PreparationTimeMinutes" class="form-control" />
        </div>

        <div class="col-md-4 mb-3">
            <label class="form-label">Kaç Kiþilik</label>
            <input asp-for="Servings" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Diyet Türü</label>
            <input asp-for="DietType" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Zorluk</label>
            <select asp-for="Difficulty" class="form-select">
                <option value="">Seçiniz</option>
                <option>Kolay</option>
                <option>Orta</option>
                <option>Zor</option>
            </select>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Öðün Etiketleri (MealTags)</label>
        <input asp-for="MealTags" class="form-control" placeholder="breakfast,lunch,dinner,snack" />
        <small class="text-muted">
            Virgülle ayýr: <b>breakfast</b>, <b>lunch</b>, <b>dinner</b>, <b>snack</b>
        </small>
        <span asp-validation-for="MealTags" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Hazýrlanýþ</label>
        <textarea asp-for="Instructions" class="form-control" rows="4"></textarea>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <div class="mb-3">
            <label class="form-label">Mevcut Fotoðraf</label><br />
            <img src="@Model.ImageUrl" style="max-height:140px;border-radius:12px;border:1px solid #ddd;" />
        </div>
    }

    <div class="mb-4">
        <label class="form-label">Fotoðrafý Güncelle (opsiyonel)</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Ýptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
