@model List<AkilliYemekTarifOneriSistemi.Models.RecipeIngredient>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var recipe = ViewBag.Recipe as AkilliYemekTarifOneriSistemi.Models.Recipe;
}

<h2 class="mb-3"> Malzemeler</h2>

@if (recipe != null)
{
    <div class="mb-3">
        <span class="badge bg-dark">Tarif:</span>
        <span class="fw-semibold">@recipe.Title</span>

        <a class="btn btn-outline-secondary btn-sm ms-2"
           asp-controller="AdminRecipes"
           asp-action="Index">
            ‹ Tariflere Dön
        </a>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card mb-4">
    <div class="card-header fw-semibold"> Malzeme Ekle</div>
    <div class="card-body">
        <form asp-action="Add" method="post" class="row g-2">
            @Html.AntiForgeryToken()

            <input type="hidden" name="recipeId" value="@recipe?.Id" />

            <div class="col-md-5">
                <label class="form-label">Malzeme</label>
                <select name="ingredientId" class="form-select" asp-items="ViewBag.Ingredients">
                    <option value="">Seçiniz</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Miktar</label>
                <input name="amount" type="number" step="0.01" min="0" class="form-control" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Birim</label>
                <input name="unit" class="form-control" placeholder="g / ml / adet" />
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-success w-100">Ekle</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header fw-semibold"> Tarifin Malzemeleri</div>

    <div class="card-body p-0">
        @if (Model == null || Model.Count == 0)
        {
            <div class="p-3 text-muted">Henüz malzeme eklenmedi.</div>
        }
        else
        {
            <table class="table table-striped mb-0 align-middle">
                <thead>
                    <tr>
                        <th>Malzeme</th>
                        <th style="width:160px">Miktar</th>
                        <th style="width:140px">Birim</th>
                        <th style="width:120px">Ýþlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Ingredient?.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Unit</td>
                            <td>
                                <form asp-action="Remove" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="recipeId" value="@recipe?.Id" />
                                    <button class="btn btn-outline-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
