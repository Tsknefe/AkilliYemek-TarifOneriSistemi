@model List<AkilliYemekTarifOneriSistemi.Models.UserAllergy>

@{
    ViewData["Title"] = "Alerjilerim";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"> Alerjilerim</h2>

        <a asp-action="Create" class="btn btn-danger rounded-pill">
            + Alerji Ekle
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light border">
            Henüz alerji eklemediniz.
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-4">
            <div class="card-body">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Malzeme</th>
                            <th style="width:160px;">Ýþlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@a.Ingredient?.Name</td>
                                <td>
                                    <a asp-action="Delete"
                                       asp-route-ingredientId="@a.IngredientId"
                                       class="btn btn-outline-danger btn-sm rounded-pill">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="UserProfile" asp-action="Index"
           class="btn btn-outline-secondary rounded-pill">
            ‹ Profilime Dön
        </a>
    </div>
</div>
