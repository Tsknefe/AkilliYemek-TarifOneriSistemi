@{
    ViewData["Title"] = "Alerji Ekle";
    var ingredients = ViewBag.Ingredients as List<AkilliYemekTarifOneriSistemi.Models.Ingredient> ?? new();
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3"> Alerji Ekle</h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Alerjik olduðun malzeme</label>
                    <select name="ingredientId" class="form-select">
                        <option value="0">Seçiniz</option>
                        @foreach (var i in ingredients)
                        {
                            <option value="@i.Id">@i.Name</option>
                        }
                    </select>
                </div>

                <div asp-validation-summary="All" class="text-danger mb-2"></div>

                <button type="submit" class="btn btn-danger rounded-pill">
                    Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill ms-2">
                    Ýptal
                </a>
            </form>
        </div>
    </div>
</div>
