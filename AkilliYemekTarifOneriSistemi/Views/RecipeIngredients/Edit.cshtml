@model AkilliYemekTarifOneriSistemi.Models.RecipeIngredient

@{
    ViewData["Title"] = "Malzemeyi Düzenle";
}

<h2 class="mb-4">✏️ Malzemeyi Düzenle</h2>

<form method="post" class="card p-4 shadow-sm">

    @Html.AntiForgeryToken()

    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label class="form-label">Malzeme</label>
        <select name="ingredientId" class="form-control">
            @foreach (var ing in ViewBag.Ingredients)
            {
                if (ing.Id == Model.IngredientId)
                {
                    <option value="@ing.Id" selected>@ing.Name</option>
                }
                else
                {
                    <option value="@ing.Id">@ing.Name</option>
                }
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Miktar</label>
        <input type="number" step="0.01" name="quantity" value="@Model.Quantity" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Birim</label>
        <input type="text" name="unit" value="@Model.Unit" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="/Recipes/Details/@Model.RecipeId" class="btn btn-secondary">Geri Dön</a>

</form>
