@model List<AkilliYemekTarifOneriSistemi.Models.Ingredient>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>🥕 Malzemeler</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Yeni Malzeme</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İngilizce Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Name</td>
                <td>@i.EnglishName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
