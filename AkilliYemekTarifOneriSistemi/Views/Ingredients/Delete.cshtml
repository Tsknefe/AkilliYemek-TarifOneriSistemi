@model AkilliYemekTarifOneriSistemi.Models.Ingredient

@{
    ViewData["Title"] = "Malzemeyi Sil";
}

<h2 class="mb-4 text-danger">⚠️ Malzemeyi Sil</h2>

<div class="card p-4 shadow-sm">

    <p><strong>Malzeme (Türkçe):</strong> @Model.Name</p>
    <p><strong>Malzeme (EnglishName - API):</strong> @Model.EnglishName</p>

    <p class="mt-3">
        Bu malzeme tariflerde kullanılıyor olabilir.
        Silersen ilişkili tariflerde sorun oluşabilir.
        Yine de silmek istiyor musun?
    </p>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">🗑️ Sil</button>
        <a href="/Ingredients" class="btn btn-secondary">Vazgeç</a>
    </form>
</div>
