@model IEnumerable<AkilliYemekTarifOneriSistemi.Models.Ingredient>

@{
    ViewData["Title"] = "Malzemeler";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-5"> Malzemeler</h1>
                <p class="lead text-muted">T羹m malzemeleri y繹netin</p>
            </div>
            <a href="@Url.Action("Create", "Ingredients")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Malzeme Ekle
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Hen羹z malzeme yok!</h4>
            <p>Hen羹z sistemde kay覺tl覺 malzeme bulunmamaktad覺r. 襤lk malzemeyi eklemek i癟in "Yeni Malzeme Ekle" butonuna t覺klay覺n.</p>
        </div>
    }
    else
    {
        <!-- Malzeme tablosu -->
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Malzeme Ad覺</th>
                                <th>Varsay覺lan Birim</th>
                                <th>A癟覺klama</th>
                                <th class="text-end">襤lemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ingredient in Model)
                            {
                                <tr>
                                    <td>@ingredient.Id</td>
                                    <td>
                                        <strong>@ingredient.Name</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(ingredient.DefaultUnit))
                                        {
                                            <span class="badge bg-secondary">@ingredient.DefaultUnit</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(ingredient.Description))
                                        {
                                            <small class="text-muted">@ingredient.Description</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "Ingredients", new { id = ingredient.Id })" 
                                               class="btn btn-sm btn-outline-info" title="Detaylar覺 G繹r">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Ingredients", new { id = ingredient.Id })" 
                                               class="btn btn-sm btn-outline-primary" title="D羹zenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Ingredients", new { id = ingredient.Id })" 
                                               class="btn btn-sm btn-outline-danger" title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

