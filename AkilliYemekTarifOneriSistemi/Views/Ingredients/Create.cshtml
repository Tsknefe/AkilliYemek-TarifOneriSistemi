@model AkilliYemekTarifOneriSistemi.Models.Ingredient

@{
    ViewData["Title"] = "Yeni Malzeme Ekle";
}

<h2 class="mb-4">➕ Yeni Malzeme Ekle</h2>

<form asp-action="Create" method="post" class="card p-4 shadow-sm">

    <div class="mb-3">
        <label class="form-label">Türkçe Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Örn: Domates" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">İngilizce Adı (API için)</label>
        <input asp-for="EnglishName" class="form-control" placeholder="Örn: Tomato" />
        <span asp-validation-for="EnglishName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="/Ingredients" class="btn btn-secondary">Geri Dön</a>
</form>
