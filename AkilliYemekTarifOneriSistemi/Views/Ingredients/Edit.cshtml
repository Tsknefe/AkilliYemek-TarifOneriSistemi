@model AkilliYemekTarifOneriSistemi.Models.Ingredient

@{
    ViewData["Title"] = "Malzeme Düzenle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Malzeme Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <strong>Malzeme Adı <span class="text-danger">*</span></strong>
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DefaultUnit" class="form-label">
                                <strong>Varsayılan Birim</strong>
                            </label>
                            <input asp-for="DefaultUnit" class="form-control" placeholder="Örn: g, ml, adet" />
                            <span asp-validation-for="DefaultUnit" class="text-danger"></span>
                            <small class="form-text text-muted">Bu malzeme genelde hangi birimle ölçülür?</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <strong>Açıklama</strong>
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Ingredients")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

