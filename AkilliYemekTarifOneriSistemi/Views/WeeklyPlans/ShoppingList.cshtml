@model List<AkilliYemekTarifOneriSistemi.Models.ShoppingListItem>

@{
    ViewData["Title"] = "Alışveriş Listesi";
    var weeklyPlan = ViewBag.WeeklyPlan as AkilliYemekTarifOneriSistemi.Models.WeeklyPlan;
}

<div class="container mt-4">
    <!-- Geri dön butonu -->
    <div class="mb-3">
        <a href="@Url.Action("Details", "WeeklyPlans", new { id = weeklyPlan?.Id })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Plan Detayına Dön
        </a>
    </div>

    <!-- Başlık ve Export butonu -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-5"> Alışveriş Listesi</h1>
                @if (weeklyPlan != null)
                {
                    <p class="lead text-muted">
                        @if (!string.IsNullOrEmpty(weeklyPlan.Title))
                        {
                            <text>@weeklyPlan.Title - </text>
                        }
                        @weeklyPlan.StartDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                    </p>
                }
            </div>
            @if (weeklyPlan != null)
            {
                <a href="@Url.Action("ExportCSV", "WeeklyPlans", new { id = weeklyPlan.Id })" class="btn btn-success">
                    <i class="bi bi-download"></i> CSV İndir
                </a>
            }
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Alışveriş listesi boş!</h4>
            <p>Bu haftalık planda henüz tarif eklenmemiş. Plan detayından tarifler ekleyerek alışveriş listesi oluşturabilirsiniz.</p>
        </div>
    }
    else
    {
        <!-- Alışveriş listesi tablosu -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-list-check"></i> Toplam @Model.Count Malzeme</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;">✓</th>
                                <th>Malzeme</th>
                                <th class="text-end">Miktar</th>
                                <th>Kullanıldığı Tarifler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input" />
                                    </td>
                                    <td>
                                        <strong>@item.IngredientName</strong>
                                    </td>
                                    <td class="text-end">
                                        <span class="badge bg-primary" style="font-size: 1em;">
                                            @item.DisplayAmount.ToString("0.##") @item.DisplayUnit
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.UsedInRecipes != null && item.UsedInRecipes.Any())
                                        {
                                            <small class="text-muted">
                                                @string.Join(", ", item.UsedInRecipes.Distinct().Take(3))
                                                @if (item.UsedInRecipes.Distinct().Count() > 3)
                                                {
                                                    <text> ve @(item.UsedInRecipes.Distinct().Count() - 3) tarif daha</text>
                                                }
                                            </small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Yazdır butonu -->
        <div class="mt-3 text-center">
            <button onclick="window.print()" class="btn btn-outline-primary">
                <i class="bi bi-printer"></i> Yazdır
            </button>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    @@media print {
        .btn, .navbar, footer {
            display: none !important;
        }
    }
</style>


