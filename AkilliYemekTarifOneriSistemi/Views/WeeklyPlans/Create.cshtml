@model AkilliYemekTarifOneriSistemi.Models.WeeklyPlan

@{
    ViewData["Title"] = "Yeni Haftalık Plan Oluştur";
    var defaultStartDate = ViewBag.DefaultStartDate ?? DateTime.Today.AddDays(7);
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Yeni Haftalık Plan Oluştur
                    </h4>
                </div>

                <div class="card-body">
                    <form asp-controller="WeeklyPlans"
                          asp-action="Create"
                          method="post">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label">
                                <strong>Haftanın Başlangıç Tarihi <span class="text-danger">*</span></strong>
                            </label>
                            <input asp-for="StartDate"
                                   type="date"
                                   class="form-control"
                                   value="@defaultStartDate.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Planın başlayacağı haftanın ilk günü (genellikle Pazartesi)
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <strong>Plan Adı (İsteğe Bağlı)</strong>
                            </label>
                            <input asp-for="Title"
                                   class="form-control"
                                   placeholder="Örn: Fit Haftalık Plan, Aile Menüsü" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="WeeklyPlans"
                               asp-action="Index"
                               class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
