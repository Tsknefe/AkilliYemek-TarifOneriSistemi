@model AkilliYemekTarifOneriSistemi.Models.WeeklyPlan

@{
    ViewData["Title"] = "Plan Sil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Haftalık Plan Sil</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">Dikkat!</h5>
                        <p>Bu haftalık planı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz ve plan içindeki tüm öğünler silinecektir.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Plan Adı:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Title))
                            {
                                <strong>@Model.Title</strong>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Başlangıç Tarihi:</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</dd>

                        <dt class="col-sm-4">Bitiş Tarihi:</dt>
                        <dd class="col-sm-8">@Model.StartDate.AddDays(6).ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</dd>

                        @if (Model.Items != null && Model.Items.Any())
                        {
                            <dt class="col-sm-4">Toplam Öğün:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-warning text-dark">
                                    @Model.Items.Count öğün planlanmış
                                </span>
                            </dd>
                        }
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "WeeklyPlans")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

