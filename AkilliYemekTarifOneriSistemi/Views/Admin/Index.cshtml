@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var latestRecipes = ViewBag.LatestRecipes as List<AkilliYemekTarifOneriSistemi.Models.Recipe>;
}

<h2 class="mb-4"> Admin Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title"> Toplam Tarif</h5>
                <h2>@ViewBag.RecipeCount</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title"> Toplam Malzeme</h5>
                <h2>@ViewBag.IngredientCount</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-dark">
            <div class="card-body">
                <h5 class="card-title"> Admin Panel</h5>
                <p>Bütün Yönetim Ýþlemlerinin Yapýldýðý Yer</p>
            </div>
        </div>
    </div>
</div>

<h4>S Son Eklenen Tarifler</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Baþlýk</th>
            <th>Süre</th>
            <th>Zorluk</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in latestRecipes)
        {
            <tr>
                <td>@r.Title</td>
                <td>@r.CookingTime dk</td>
                <td>@r.Difficulty</td>
            </tr>
        }
    </tbody>
</table>
